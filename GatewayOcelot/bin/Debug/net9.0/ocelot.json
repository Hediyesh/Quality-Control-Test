{
  "Routes": [
    {
      "UpstreamPathTemplate": "/api/control/{everything}",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE" ],
      "DownstreamPathTemplate": "/api/control/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "controlservice",
          "Port": 5262 //پورتو درست کن
        }
      ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": []
      },
      "RouteClaimsRequirement": {
        "role": "admin"
      }
    },
    {
      "DownstreamPathTemplate": "/api/Login",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5085
        }
      ],
      "UpstreamPathTemplate": "/users/login",
      "UpstreamHttpMethod": [ "POST" ] //, "GET" 
    },
    {
      "UpstreamPathTemplate": "/api/email/{everything}",
      "UpstreamHttpMethod": [ "POST" ],
      "DownstreamPathTemplate": "/api/email/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "sendemailservice",
          "Port": 80
        }
      ]
    },
    {
      "UpstreamPathTemplate": "/api/tools/{everything}",
      "UpstreamHttpMethod": [ "GET", "POST" ],
      "DownstreamPathTemplate": "/api/tools/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "toolsservice",
          "Port": 80
        }
      ]
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:5042"
  }
}